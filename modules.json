{
    "files": ["*.dll", "*.so", "*.dylib", "*.noscfg", "*.nossys", "*.nosdef"],
    "plugins": {
        "nos.aja": {
            "target_name": "nosAJA",
            "path": "nosAJA",
            "deps": [
                "nosAJA/*",
                "External/ntv2/*",
                "External/stb/*"
            ]
        },
        "nos.filters": {
            "target_name": "nosFilters",
            "path": "nosFilters",
            "deps": [
                "nosFilters/*",
                "Shaders/*"
            ],
            "files": ["Shaders/*.frag", "Shaders/*.spv"]
        },
        "nos.math": {
            "target_name": "nosMath",
            "path": "nosMath",
            "deps": [
                "nosMath/*"
            ]
        },
        "nos.utilities": {
            "target_name": "nosUtilities",
            "path": "nosUtilities",
            "deps": [
                "nosUtilities/*",
                "Shaders/*",
                "External/stb/*"
            ],
            "files": ["Shaders/*.frag", "Shaders/*.spv"]
        },
        "nos.WebRTC": {
            "target_name": "nosWebRTC",
            "path": "nosWebRTC",
            "deps": [
                "nosWebRTC/*"
            ]
        }
    },
    "subsystems": {
        "nos.sys.vulkan": {
            "target_name": "nosVulkanSubsystem",
            "path": "nosVulkanSubsystem",
            "deps": [
                "nosVulkanSubsystem/*"
            ]
        }
    }
}