{
    "files": [
        "*.dll",
        "*.so",
        "*.dylib",
        "*.fbs",
        "*.noscfg",
        "*.nossys",
        "*.nosdef",
        "**/Defaults.json"
    ],
    "plugins": {
        "nos.aja": {
            "target_name": "nosAJA",
            "path": "Plugins/nosAJA",
            "deps": [
                "Plugins/nosAJA/*",
                "Plugins/External/ntv2/*",
                "Plugins/External/stb/*"
            ]
        },
        "nos.filters": {
            "target_name": "nosFilters",
            "path": "Plugins/nosFilters",
            "deps": [
                "Plugins/nosFilters/*",
                "Plugins/Shaders/*"
            ],
            "files": [
                "Shaders/*.frag",
                "Shaders/*.hlsl",
                "Shaders/*.glsl",
                "Shaders/*.spv"
            ]
        },
        "nos.math": {
            "target_name": "nosMath",
            "path": "Plugins/nosMath",
            "deps": [
                "Plugins/nosMath/*"
            ]
        },
        "nos.utilities": {
            "target_name": "nosUtilities",
            "path": "Plugins/nosUtilities",
            "deps": [
                "Plugins/nosUtilities/*",
                "Plugins/Shaders/*",
                "Plugins/External/stb/*"
            ],
            "files": [
                "Shaders/*.frag",
                "Shaders/*.hlsl",
                "Shaders/*.spv",
                "Shaders/*.comp",
                "Shaders/*.glsl",
                "Config/*.json"
            ]
        },
        "nos.WebRTC": {
            "target_name": "nosWebRTC",
            "path": "Plugins/nosWebRTC",
            "deps": [
                "Plugins/nosWebRTC/*"
            ]
        },
        "nos.MediaIO": {
            "target_name": "nosMediaIO",
            "path": "Plugins/nosMediaIO",
            "deps": [
                "Plugins/nosMediaIO/*",
                "Plugins/Shaders/*"
            ],
            "files": [
                "Shaders/*.frag",
                "Shaders/*.hlsl",
                "Shaders/*.spv",
                "Shaders/*.comp",
                "Shaders/*.glsl",
                "Config/*.json"
            ]
        }
    },
    "subsystems": {
        "nos.sys.vulkan": {
            "target_name": "nosVulkanSubsystem",
            "path": "Subsystems/nosVulkanSubsystem",
            "deps": [
                "Subsystems/nosVulkanSubsystem/*"
            ],
            "files": [
                "Include/**",
                "Assets/**"
            ]
        },
        "nos.sys.shaderc": {
            "path": "Subsystems/nosShaderCompiler",
            "file_only_subsystem": true,
            "exclude_from_all": true,
            "deps": [
                "Subsystems/nosShaderCompiler/*"
            ],
            "files": [
                "Binaries/**"
            ]
        },
		"nos.sys.animation": {
            "target_name": "nosAnimationSubsystem",
            "path": "Subsystems/nosAnimationSubsystem",
            "deps": [
                "Subsystems/nosAnimationSubsystem/*"
            ],
            "files": [
                "Include/**"
            ]
        }
    }
}